.iiw-system-deviceDetection{
    position: relative;
    width: 100%;
    height: 100%;
}

.iiw-system-deviceDetection-container{
    background-color: rgba(0,0,0,.3);
    position: relative;
}

.iiw-system-deviceDetection-container-body{
    padding: 10px 25%;
}

.iiw-system-deviceDetection-container-body-content{
    width: 100%;
    position: relative;
}

.iiw-system-deviceDetection-container-body-content .project-details,
.iiw-system-deviceDetection-container-body-content  .project{
    margin: 20px auto;
    padding: 20px 0;
    background-color: rgba(0, 0, 0, .3);
    border-radius: 10px;
    width: 100%;
    height: 80px;
    line-height: 40px;
    position: relative;
    text-align: center;
}

.iiw-system-deviceDetection-container-body-content .project-details{
    width: 50%;
    height: 70px;
    padding: 15px 0;
}