
.system-infocard-item-form {
    width: 100%;
    height: 100%;
}

.system-infocard-item-form .form-group.has-error .form-control {
    border: 1px solid #d9534f;
}

.system-infocard-item-datasource {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
}

.system-infocard-item-dialog {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;
    background-color: rgba(0,0,0,0.9);
}

.local-file-choose-box {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100px;
    height: 70px;
    text-align: center;
}

.system-infocard-item-edit-template {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;
    background-color: rgba(0,0,0,0.9);
}

.data-item-bind-btn {
    display: none;
}

.system-infocard-item-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-color: rgba(0,0,0,0.5);
    display: table;
}

.system-infocard-item-mask > div {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    font-size: 20px;
    letter-spacing: 1px;
    font-family: '微软雅黑';
    font-weight: bold;
    text-shadow: 0 0 10px;
}