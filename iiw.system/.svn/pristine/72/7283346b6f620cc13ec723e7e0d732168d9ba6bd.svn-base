.iiw-system-tax-photo-add .iiw-system-form-container{
    background-color: rgba(0,0,0,.3);
}

.iiw-system-tax-photo-add{
    color: #fff;
}

.iiw-system-tax-photo-add .fa-image{
    width: 350px;
    height: 300px;
    border-radius: 5px;
    border: 2px solid rgba(0,0,0,.3);
    background-color: #ddd;
    text-align: center;
    line-height: 296px;
    font-size: 70px;
    color: #555;
}

.iiw-system-tax-photo-add .ng-isolate-scope{
    width: 95%;
}

.iiw-system-tax-photo-add .select{
    background-color: rgba(223, 105, 26,0.8);
}

.iiw-system-tax-photo-add-list{
    width: 100%;
    height: 100%;
    position: relative;
}

.iiw-system-tax-photo-add-list-rows{
    width: 100%;
    height: 50px;
    background-color: rgba(0,0,0,.3);
    line-height: 50px;
    border: 1px solid rgba(255,255,255,.3);
    position: relative;
}

.iiw-system-tax-photo-add-list-rows:hover{
    cursor: pointer;
    background-color: rgba(223, 136, 56,0.8);
    border: 1px solid rgba(255,255,255,.5);
}

.iiw-system-tax-photo-add-list .ng-isolate-scope{
    width: 100%;
}

.iiw-system-tax-photo-add-list .close {
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
    height: 100%;
    text-align: center;
    font-size: 22px;
    line-height: 50px;
}

.iiw-system-tax-photo-add-list .close:hover{
    color: #f55;
}

.iiw-system-tax-photo-add .list{
    height: calc(100% - 60px);
    padding: 15px;
    overflow: hidden;
}

.iiw-system-tax-photo-add .base{
    padding: 0 35px;
}

.iiw-system-tax-photo-add img{
    max-width: 100%;
    max-height: 100%;
}