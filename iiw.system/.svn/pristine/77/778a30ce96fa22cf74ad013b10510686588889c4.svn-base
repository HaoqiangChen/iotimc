<div class="iiw-system-syconfig" ui-view>
    <div class="ui-layout-column" ui-layout="{ flow: 'column'}" options="{dividerSize:'0'}">
        <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
            <div class="ui-layout-container iiw-system-module-title-container" size="60px" ui-layout-container>
                <h2 class="page-title">{{title}}</h2>
            </div>
            <div class="ui-layout-container" ui-layout-container style="margin-top: 5px">
                <div class="layout-full system-syconfig-bar">
                    <div ui-layout options="{dividerSize:'0'}">
                        <div ui-layout-container size="47px">
                            <div class="layout-full system-syconfig-bar">
                                <div class="layout-full">
                                </div>
                            </div>
                        </div>
                        <div ui-layout-container class="syconfig-container-body">
                            <div class="layout-full" i-scroll style="border:1px solid rgba(0,0,0,0.2);">
                                <table class="table table-hover iiw-system-table-container">
                                    <colgroup><col width="100px"><col width="250px"><col width="500px"><col/><col width="200px"/><col/></colgroup>
                                    <thead>
                                        <tr>
                                            <th>名称</th>
                                            <th class="text-center">关键字</th>
                                            <th>内容</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in syconfigList">
                                            <td>
                                                <div>{{item.name}}</div>
                                            </td>
                                            <td class="text-center">
                                                <div>{{item.key}}</div>
                                            </td>
                                            <td>
                                                <div class="syconfig-system-select" ng-if="item.inputtype == 'combo'">
                                                    <select class="syconfig-select-option" ng-model="item._key" ng-change="selectInfo(item._key)" ng-options="contentInfo.id as contentInfo.content for contentInfo in oKeyList[item.key]" style="width:70%;">
                                                        <option value="">当前:{{item.content}}</option>
                                                    </select>
                                                </div>
                                                <div ng-if="item.inputtype != 'combo'">
                                                    <input ng-model="item.content" ng-change="changeKey(item)" style="width:245px;" type="text"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div ui-layout-container ng-if="showBtn == true" class="syconfig-container-foot stretch ui-layout-container" size="49px" style="height: 49px; top: 413px;">
                            <button class="btn btn-danger pull-right" ng-click="syconfig.cancle()">取消</button>
                            <button class="btn btn-success pull-right" ng-click="syconfig.save()">保存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
