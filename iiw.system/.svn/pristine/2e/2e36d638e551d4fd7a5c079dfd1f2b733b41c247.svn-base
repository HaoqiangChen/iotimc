<div class="layout-full">
    <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
        <div class="ui-layout-container iiw-system-form-container" ui-layout-container>
            <div class="layout-full" i-scroll>
                <div>
                    <form class="form-horizontal label-left" id="entityItemForm" name="entityItemForm" novalidate>
                        <fieldset>
                            <legend class="section">应急专家基本信息</legend>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">姓 名</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="text" ng-model="entityItem.name" placeholder="请输入专家姓名" class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <lable ng-show="entityItem.name == null" style="color:red;">*专家姓名不能为空</lable>
                                </div>
                            </div>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">性 别</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <select ng-model="entityItem.sex" class="col-md-5" required>
                                            <option value="" selected>请选择性别</option>
                                            <option value="男">男</option>
                                            <option value="女">女</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <lable ng-show="entityItem.sex == null" style="color:red;">*性别不能为空</lable>
                                </div>
                            </div>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">所在单位</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="text" ng-model="entityItem.syoufk" placeholder="请输入专家所在单位" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">联系方式</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="text" ng-model="entityItem.contact" placeholder="请输入专家联系方式" class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <lable ng-show="!entityItem.contact" style="color:red;">*联系方式不能为空</lable>
                                </div>
                            </div>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">职 称</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="text" ng-model="entityItem.post" placeholder="请输入专家职称" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="control-group row">
                                <div class="col-md-2">
                                    <label class="control-label">专业特长</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <textarea type="text" ng-model="entityItem.specialty" placeholder="请输入应急处置专业特长" class="form-control" ></textarea>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="ui-layout-container iiw-system-form-button-layout-container" size="60px" ui-layout-container>
            <button class="btn btn-success btn-s-md" ng-disabled="entityItemForm.$invalid" ng-click="save()">提交</button>
            <button class="btn btn-danger btn-s-md" ng-click="cancel()">取消</button>
        </div>
    </div>
</div>
