<div class="iiw-system-page-container">
    <div class="stretch ui-layout-column" ui-layout="{ flow: 'column'}" options="{dividerSize:'0'}">
        <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
            <div class="ui-layout-container iiw-system-module-title-container" size="65px" ui-layout-container>
                <h2 class="page-title">{{title}}</h2>
            </div>
            <div class="ui-layout-container" ui-layout-container>
                <div class="layout-full" ui-view style="overflow: auto;">
                    <div class="ui-layout-row system-commenting-page-content" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
                        <div class="ui-layout-container" size="47px" ui-layout-container>
                            <div class="system-commenting-bar layout-full">
                                <a class="btn btn-primary" ng-click="add()" style="padding: 8px 16px;"><i class="fa fa-plus fa-fw"></i>添加/修改</a>
                                <!--<a class="btn btn-success" ng-click="mod()" style="padding: 8px 16px;"><i class="fa fa-edit fa-fw"></i>修改</a>-->
                                <!--<a class="btn btn-danger" ng-click="del()" style="padding: 8px 16px;"><i class="fa fa-minus fa-fw"></i>删除</a>-->
                                <a class="btn btn-info" ng-click="share()" style="padding: 8px 16px;"><i class="fa fa-sitemap fa-fw"></i>共享配置</a>

                                <label class="pull-right">
                                    <input type="text" id="commenting_search" ng-model="commenting.searchTitle" placeholder="{{keyword}}" class="system-commenting-search"/>
                                </label>
                            </div>
                        </div>
                        <div class="ui-layout-container" ui-layout-container>
                            <div class="layout-full system-commenting-container" style="position: relative; display:inline-block;">
                                <div class="layout-full" style="border: 1px solid rgba(0, 0, 0, 0.2); overflow: hidden;">
                                    <table class="table table-hover iiw-system-table-container">
                                        <thead>
                                        <tr>
                                            <th class="iiw-system-table-header-container" style="text-align: center">
                                                <input id="checkAll" type="checkbox" ng-model="commenting.selectAll" ng-change="selAll()">
                                            </th>
                                            <th class="text-center">序号</th>
                                            <th>编号</th>
                                            <th>名称</th>
                                            <!--<th>默认主页</th>-->
                                            <th class="text-center">状态</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <!--<tr ng-repeat="zrow in entityItem | filter:searchTitle">-->
                                        <tr ng-repeat="zrow in commentingList" ng-click="checkBtnFlag(zrow)">
                                            <td class="text-center">
                                                <input type="checkbox" ng-model="zrow.checked" style="width:20px;height:20px;">
                                            </td>
                                            <td class="text-center">{{$index+1}}</td>
                                            <td>{{zrow.code}}</td>
                                            <td>{{zrow.name}}</td>
                                            <!--<td>{{zrow.homepage}}</td>-->
                                            <td class="text-center" ng-class="{'text-warning':zrow.status=='L', 'text-danger':zrow.status=='C'}">{{role.statusList[zrow.status]}}</td>
                                        </tr>
                                        </tbody>
                                        <tfoot>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="pagination ui-layout-container pagination-layout-container" size="49px" ui-layout-container>
                            <label class="col-lg-3" style="height:50px; line-height: 50px;">统计信息：每页{{commenting.pageSize}}行， 共{{commenting.totalSize||0}}行， 共{{commenting.totalPage||0}}页</label>
                            <uib-pagination style="padding: 5px;" boundary-links="true" first-text="&laquo;" last-text="&raquo;" class="pagination pull-right" total-items="commenting.totalSize" ng-model="commenting.currentPage" ng-change="pageChange()" items-per-page="commenting.pageSize" previous-text="上一页" next-text="下一页" max-size="5"></uib-pagination>
                        </div>
                    </div>
                </div>
                <div style="display: none;" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal fade" id="syouTreeModel">
                    <div class="modal-dialog">
                        <div class="modal-content" style="height: 649px; ">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()"><i class="fa fa-remove"></i></button>
                                <h4 class="modal-title">选择单位</h4>
                                <div style="height: 39px">
                                    <button class="btn btn-success pull-right" style="margin-right: 5px"><i class="fa fa-search"></i></button> <input class="pull-right" type="text" placeholder="请输入单位名称进行查找" id="searchField" style="margin-right: 5px;height: 39px"/>
                                </div>
                            </div>
                            <div class="modal-body" style="height: 555px;">
                                <div class="col-lg-12 widget-content iiw-system-treeview-container" style="padding: 0px;">
                                    <div style="width:100%;height:100%;overflow: hidden;position: relative;" i-scroll>
                                        <div>
                                            <ul system-tree-view ng-model="selectNode" id="sycodeTreeview" class="ztree"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary btn-lg btn-larger" data-dismiss="modal" ng-click="cancel()">取消</button>
                            <button class="btn btn-default btn-lg btn-larger" data-dismiss="modal" ng-click="selectOu()">确定</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
