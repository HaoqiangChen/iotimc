    </div>
</script>

<script type="text/ng-template" id="monitorTreeDialog.html">
    <div class="modal-header">
        <h3 class="modal-title">监控树</h3>
    </div>
    <div class="modal-body system-monitorpatrol-monitortree-body">
        <div class="layout-full" i-scroll>
            <ul monitorpatrol-tree data="monitorTree" id="monitorTree" class="ztree"></ul>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" ng-click="ok()">确认选择</button>
        <button class="btn btn-default" ng-click="cancel()">取消</button>
    </div>
</script>