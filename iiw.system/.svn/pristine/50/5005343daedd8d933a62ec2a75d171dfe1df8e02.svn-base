.system-severe {
    padding: 10px;
    position: relative;
    height: 100%;
}

.system-severe .view-wrap {
    width: 100%;
    padding-right: 20px;
    position: absolute;
    bottom: 0px;
    top: 60px;
}

.system-severe .view-wrap .view-content {
    height: 100%;
}

.system-severe .widget {
    height: 100%;
}

.system-severe .menu-button {
    float: left;
    height: 100%;
    margin-top: 10px;
}

.system-severe .menu-button.right {
    float: right;
}

.system-severe .widget-content {
    width: 100%;
    position: absolute;
    top: 60px;
    bottom: 0px;
    padding: 0px;
}

.system-severe .widget-content .wrap {
    height: 100%;
}

.system-severe .widget-content .left-tree {
    height: 100%;
    border-right: 2px solid rgba(0, 0, 0, 0.2);
}

.system-severe .widget-content .right-content {
    height: 100%;
    padding: 0px;
    position: relative;
}

.ztree .button {
    transition-property: none;
}

.system-severe .widget-content {
    width: 100%;
    position: absolute;
    top: 60px;
    bottom: 0px;
    padding: 0px;
}

.system-severe .widget-btns {
    float: right;
    padding: 10px 10px 0 0;
}

.system-severe .wrap {
    padding: 0;
    margin: 0;
}

.system-severe .wrap .ou-container {
    position: relative;
    margin: 10px;
    background: rgba(0, 0, 0, 0.3);
    padding: 0px;
    overflow: hidden;
}

.system-severe .wrap .ou-container.fill {
    padding: 20px;
}

.system-severe .wrap .ou-container .title {
    height: 40px;
    width: 100%;
}

.system-severe .wrap .ou-container .content {

}

.system-severe .wrap .ou-container .door-container {
    position: relative;
    width: 100px;
    height: 100px;
    margin-right: 20px;
    margin-bottom: 20px;
    float: left;
    cursor: pointer;
    text-align: center;
}

.system-severe .wrap .ou-container .door-container > .door-content {
    position: relative;
    background: rgba(0, 0, 0, 0.3);
    height: 80px;
}

.system-severe .wrap .ou-container .door-container > .door-name {
    height: 20px;
}

.system-severe .wrap .ou-container .door-container > .door-content > .door-btn {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 100%;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    cursor: pointer;
    transition: all .3s ease;
    text-shadow: none;
    font-size: 40pt;
    color: #5cb85c;
}

.system-severe .wrap .ou-container .door-container > .door-btn:hover {
    text-shadow: 0px 0px 5px #FFFFFF;
}

.system-severe .checked {
    background-color: rgba(0, 0, 0, .6) !important;
    color: #666;
}

.system-severe .checked td {
    cursor: not-allowed;
}

.system-severe .back {
    background-color: rgba(200, 80, 26, 0.8) !important;
}

.modal-content {
    background-color: rgba(0, 0, 0, 0.6);
    color: #FFFFFF;
}

.modal-header {
    background-color: rgba(0, 0, 0, 0.4);
    color: #FFFFFF;
}

.modal-footer {
    background-color: transparent;
}

.modal-footer .btn-success {
    width: 120px;
    height: 40px;
}

.modal-footer .btn-warning {
    width: 120px;
    height: 40px;
}

.modal-backdrop {
    background-color: #FFF;
}

.system-severe-device {
    width: 100%;
    height: 50px;
    padding: 5px 0;
}

.system-severe-device > div {
    float: left;
    height: 100%;
}

.system-severe-device > div:nth-child(1) {
    width: 10%;
    padding: 0 10px;
}

.system-severe-device > div:nth-child(2) {
    width: 30%;
}

.system-severe-device > div:nth-child(3) {
    width: 30%;
}

.system-severe-device > div:nth-child(4) {
    width: 20%;
}

.system-severe-device > div:nth-child(5) {
    width: 10%;
}

.system-severe-device:not(.ui-layout-container):nth-child(odd) {
    background-color: rgba(0, 0, 0, .1);
}

.system-severe-device:not(.ui-layout-container):nth-child(even) {
    background-color: rgba(0, 0, 0, .3);
}

.system-severe-device:not(.ui-layout-container):hover {
    cursor: pointer;
    background-color: rgba(223, 105, 26, 0.8);
}

div::-webkit-scrollbar {
    width: 6px;
}

div::-webkit-scrollbar-thumb {
    background-color: rgba(200, 200, 200, .7);
    border-radius: 50px;
}