.iiw-system-tax-file-add .iiw-system-form-container{
    background-color: rgba(0,0,0,.3);
}

.iiw-system-tax-file-add{
    color: #fff;
}

.iiw-system-tax-file-add #tax_video{
    display: table;
    width: 100%;;
    height: 100%;
    padding: 0;
}

.iiw-system-tax-file-add #tax_video .bg{
    display: table-cell;
    vertical-align: middle;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    text-align: center;
    font-size: 70px;
    color: #ccc;
    position: relative;
}

.iiw-system-tax-file-add #tax_video img{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border: none;
}

.iiw-system-tax-file-add #tax_video .select:hover{
    text-shadow: 0 0 10px #fff;
    color: #fff;
    cursor: pointer;
}

.iiw-system-tax-file-add #tax_video .bg .fa{
    position: relative;
}

.iiw-system-tax-file-add .ng-isolate-scope{
    width: 95%;
}

.iiw-system-tax-file-add .select{
    background-color: rgba(223, 105, 26,0.8);
}

.iiw-system-tax-file-add-list{
    width: 100%;
    height: 100%;
    position: relative;
}

.iiw-system-tax-file-add-list-rows{
    width: 100%;
    height: 50px;
    background-color: rgba(0,0,0,.3);
    line-height: 50px;
    border: 1px solid rgba(255,255,255,.3);
    position: relative;
}

.iiw-system-tax-file-add-list-rows:hover{
    cursor: pointer;
    background-color: rgba(223, 136, 56,0.8);
    border: 1px solid rgba(255,255,255,.5);
}

.iiw-system-tax-file-add-list .ng-isolate-scope{
    width: 100%;
}

.iiw-system-tax-file-add-list .close-video {
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
    height: 100%;
    text-align: center;
    font-size: 22px;
    line-height: 50px;
}

.iiw-system-tax-file-add-list .close-video .fa{
    width: 100%;
    height: 100%;
    line-height: 48px;
}

.iiw-system-tax-file-add-list .close-video .fa-check{
    color: #5c6;
}

.iiw-system-tax-file-add-list .close-video .fa-refresh{
    color: #eee;
}

.iiw-system-tax-file-add-list .close-video .fa-clock-o{
    color: #999;
}

.iiw-system-tax-file-add-list .close-video .fa-close:hover{
    color: #f55;
}

.iiw-system-tax-file-add .list{
    height: calc(100% - 60px);
    padding: 15px;
    overflow: hidden;
}

.iiw-system-tax-file-add .base{
    padding: 0 35px;
}

.iiw-system-tax-file-add img{
    max-width: 100%;
    max-height: 100%;
}