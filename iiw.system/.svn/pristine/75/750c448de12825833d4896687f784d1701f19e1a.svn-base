.safe-infocard-line-title {

    text-align: center;
    height: 30px;
    line-height: 30px;
}

.safe-infocard-line-title > label {
    text-shadow: 0 0 10px;
    font-size: 15px;
    letter-spacing: 2px;
}

.safe-infocard-table > table {
    width: 100%;
}

.safe-infocard-table > table tr:nth-child(2n+1) {
    background-color: rgba(0,0,0,0.1);
}

.safe-infocard-table > table tr:nth-child(1) {
    background-color: rgba(0,0,0,0.2);
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.safe-infocard-table > table td {
    height: 30px;
    line-height: 30px;
    text-align: center;
    vertical-align: middle;
}

.safe-infocard-content > div > div {
    margin-left: -15px;
    margin-right: -15px;
}

.safe-infocard-panel .datasource {
    box-shadow: 0 0 5px red inset;
    position: relative;
}

.safe-infocard-panel .datasource:hover {
    cursor: default;
    background-color: rgba(0,0,0,0.3);
}

.safe-infocard-panel .datasource.select {
    background-color: rgba(0,0,0,0.3);
    -webkit-animation: safe-infocard-datasource-select alternate infinite ease-in 1.5s;
}

@-webkit-keyframes safe-infocard-datasource-select {
    from {
        box-shadow: 0 0 10px orange inset;
    }
    to {
        box-shadow: 0 0 25px orange inset;
    }
}

.safe-infocard-panel{
    position: relative;
}