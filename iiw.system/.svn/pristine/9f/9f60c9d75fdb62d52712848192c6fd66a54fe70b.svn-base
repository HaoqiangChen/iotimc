
.system-announcement {
    position: relative;
}

.system-announcement .stretch {
    overflow: hidden;
}

.system-announcement-container {
    background-color: rgba(0,0,0,0.3);
}

.system-announcement-bar {
    background-color: rgba(0,0,0,0.3);
}

.system-announcement-bar a {
    margin-right: 4px;
}

a.system-announcement-linka:hover {
    text-decoration: underline;
}

.system-announcement-container .monitorpatrol-container-body {
    padding: 15px;
}

.system-announcement-container .monitorpatrol-container-body .table tr:hover {
    cursor: default;
}

.system-announcement-container .monitorpatrol-container-body .table td,
.system-announcement-container .monitorpatrol-container-body .table th {
    vertical-align: middle;
}

.system-announcement-container .monitorpatrol-container-foot {
    background-color: rgba(0,0,0,0.3);
}

.system-announcement-container .announcement-container-foot {
    background-color: rgba(0,0,0,0.3);
    border-top: 1px solid rgba(0,0,0,0.15);
}