<div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
    <div class="ui-layout-container iiw-system-module-title-container" ui-layout-container>
        <div class="row layout-full">
            <div class="col-lg-6 widget-content iiw-system-treeview-container">
                <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">

                    <div class="widget-header ui-layout-container" size="60px" ui-layout-container>
                        <div class="iiw-system-menu-bar-container" style="width:60%">
                            <a data-backdrop="false" data-target="#mySyncModal" data-toggle="modal" class="btn btn-s-md btn-primary" ng-click="syncBatch()"><i class="fa fa-plus"></i>同步通道</a>
                            <a class="btn btn-s-md btn-primary" ng-click="back()"><i class="fa fa-reply-all"></i>返回</a>
                        </div>
                        <div class="iiw-system-search-bar-container" style="width: 40%">
                            <label class="pull-right">
                                <input type="text" id="device_search" ng-model="searchDeviceTitle" ng-change="searchDeviceInfo()" placeholder="{{keyword}}"/>
                            </label>
                        </div>
                    </div>

                    <div class="widget-content ui-layout-container" ui-layout-container>
                        <div class="layout-full" style="position: relative;display:inline-block; overflow: auto;">
                            <div>
                                <table class="table table-hover iiw-system-table-container">
                                    <thead>
                                        <tr>
                                            <th style="width: 8%">序号</th>
                                            <th>设备名称</th>
                                            <th style="width: 25%">IP地址</th>
                                            <th style="width: 37%">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="zrow in entityMonitorServerItem">
                                            <td>{{$index+1}}</td>
                                            <td ng-click="showMonitorInfo($index)">{{zrow.name}}</td>
                                            <td ng-click="showMonitorInfo($index)">{{zrow.ip}}</td>
                                            <td class="full-right">
                                                <a data-backdrop="false" data-toggle="modal" class="btn btn-sm btn-primary" ng-click="singleSync($index)">同步</a>
                                                <a data-backgrop="false" data-toggle="modal" class="btn btn-sm btn-success" ng-click="singleSync($index, 'same')">更新同名监控</a>
                                                <a class="btn btn-sm btn-info" ng-click="singleSync($index, 'ouinfo', true)">同步单位及监控</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 widget-content iiw-system-treeview-container">
                <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
                    <div class="ui-layout-container" size="60px" ui-layout-container>
                        <div class="iiw-system-search-bar-container pull-right">
                            <label class="pull-right">
                                <input type="text" id="syuser_search" ng-model="searchTitle" placeholder="{{keyword}}" ng-change="searchChannelInfo()"/>
                            </label>
                        </div>
                    </div>
                    <div class="widget-content ui-layout-container" ui-layout-container>
                        <div class="layout-full" style="position: relative; display:inline-block; overflow: auto;">
                            <div>
                                <table class="table table-hover iiw-system-table-container">
                                    <thead>
                                    <tr>
                                        <!--<th class="iiw-system-table-header-container">-->
                                            <!--<input id="checkAll" type="checkbox" ng-model="selectAll" ng-click="selAll()">-->
                                        <!--</th>-->
                                        <th>序号</th>
                                        <th>通道名称</th>
                                        <th>IP地址</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr ng-repeat="zrow in entityChannelItem">
                                        <!--<td class="iiw-system-table-header-container">-->
                                            <!--<system-row-check ng-model="zrow.checked" class="rowCheck"></system-row-check>-->
                                        <!--</td>-->
                                        <td>{{$index+1}}</td>
                                        <td>{{zrow.name}}</td>
                                        <td>{{zrow.ip}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="pagination ui-layout-container pagination-layout-container" size="60px" ui-layout-container>
                        <uib-pagination boundary-links="true" first-text="&laquo;" last-text="&raquo;" class="pagination pull-right" total-items="totalSyncSize" ng-model="currentSyncPage" ng-change="searchChannelInfo()" items-per-page="pageSyncSize" previous-text="上一页" next-text="下一页" max-size="5"></uib-pagination>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

