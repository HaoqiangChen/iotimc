<div class="iiw-system-bigmonitorthemerelevanceitem" ui-view>
    <div ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
        <div size="60px" ui-layout-container style="overflow:hidden;">
            <h2 class="page-title">{{title}}</h2>
        </div>
        <div ui-layout-container class="iiw-system-bigmonitorthemerelevanceitem-container layout-full">
            <div ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
                <div ui-layout-container size="10px"></div>
                <div ui-layout-container>
                    <div ui-layout="{ flow: 'column'}" options="{dividerSize:'0'}">
                        <div ui-layout-container size="10px"></div>
                        <div ui-layout-container style="background-color: rgba(0,0,0,0.3);overflow:hidden;">
                            <div class="iiw-system-bigmonitorthemerelevanceitem-container-header">
                                <label>选择电视墙：</label>
                                <select style="height: 39px;color:#fff;background-color: rgba(0,0,0,0.2);" ng-change="bigMonitorThemeRelevanceItem.changeMonitor('left')" ng-options="item.id as item.name for item in bigMonitorThemeRelevanceItem.bigmonitorList" ng-model="bigMonitorThemeRelevanceItem.leftMonitorType"></select>
                            </div>
                            <div class="iiw-system-bigmonitorthemerelevanceitem-container-main">
                                <div class="layout-full">
                                    <table class="table table-hover iiw-system-table-container">
                                        <colgroup><col width="8%"/><col width="46"/><col width="46"/></colgroup>
                                        <thead>
                                            <tr style="height: 46px;">
                                                <th>序号</th>
                                                <th>名称</th>
                                                <th>模式</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in bigMonitorThemeRelevanceItem.leftList" ng-class="{'select': item.status}" ng-click="bigMonitorThemeRelevanceItem.leftSelect(item)" style="height: 50px;">
                                                <td>{{$index + 1}}</td>
                                                <td>{{item.name}}</td>
                                                <td>{{item._theme}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div style="background-color: rgba(0,0,0,0.1);height: 7%;">
                                <uib-pagination style="margin: 5px;" class="pagination pull-right" direction-links="true" boundary-links="true" boundary-link-numbers="true" rotate="false" total-items="role.totalSize" ng-model="role.currentPage" ng-change="role.change()" items-per-page="role.pageSize" max-size="10" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></uib-pagination>
                            </div>
                        </div>
                        <div ui-layout-container size="10px"></div>
                        <div ui-layout-container style="background-color: rgba(0,0,0,0.3);overflow:hidden;">
                            <div class="iiw-system-bigmonitorthemerelevanceitem-container-header">
                                <label>选择电视墙：</label>
                                <!--<select ng-change="bigMonitorThemeRelevanceItem.changeMonitor('right')" ng-options="item.id as item.name for item in bigMonitorThemeRelevanceItem.bigmonitorRightList" ng-model="bigMonitorThemeRelevanceItem.rightMonitorType" style="height: 39px;color:#fff;background-color: rgba(0,0,0,0.2);"></select>-->
                                <select ng-change="bigMonitorThemeRelevanceItem.changeMonitor('right')" ng-model="bigMonitorThemeRelevanceItem.rightMonitorType" style="height: 39px;color:#fff;background-color: rgba(0,0,0,0.2);">
                                    <option value="null">已选择{{bigMonitorThemeRelevanceItem.selectList.length}}个模式</option>
                                    <option value="{{item.id}}" ng-repeat="item in bigMonitorThemeRelevanceItem.bigmonitorRightList">{{item.name}}</option>
                                </select>
                            </div>
                            <div class="iiw-system-bigmonitorthemerelevanceitem-container-main">
                                <div class="layout-full">
                                    <table class="table table-hover iiw-system-table-container">
                                        <colgroup><col width="3%"/><col width="7%"/><col width="45"/><col width="45"/></colgroup>
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" style="width:20px;height: 20px;" ng-model="bigMonitorThemeRelevanceItem.selAll" ng-click="bigMonitorThemeRelevanceItem.selectAll()"/></th>
                                                <th>序号</th>
                                                <th>名称</th>
                                                <th>模式</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="monitor in bigMonitorThemeRelevanceItem.rightList" ng-class="{'select': monitor.checked}" ng-click="bigMonitorThemeRelevanceItem.rightSelect(monitor)">
                                                <td><input type="checkbox" ng-model="monitor.checked" style="width:20px;height: 20px;"/></td>
                                                <td>{{$index + 1}}</td>
                                                <td>{{monitor.name}}</td>
                                                <td>{{monitor._theme}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!--<div style="background-color: rgba(0,0,0,0.1);height: 7%;">-->
                                <!--<uib-pagination style="margin: 5px;" class="pagination pull-right" direction-links="true" boundary-links="true" boundary-link-numbers="true" rotate="false" total-items="role.totalSize" ng-model="role.currentPage" ng-change="role.change()" items-per-page="role.pageSize" max-size="10" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></uib-pagination>-->
                            <!--</div>-->
                        </div>
                        <div ui-layout-container size="10px"></div>
                    </div>
                </div>
                <div ui-layout-container size="10px"></div>
                <div ui-layout-container size="50px" style="padding: 5px;background-color: rgba(0,0,0,0.3);">
                    <div class="pull-right">
                        <button class="btn btn-success" ng-click="bigMonitorThemeRelevanceItem.save()">保存</button>
                        <button class="btn btn-danger" ng-click="bigMonitorThemeRelevanceItem.back()">取消</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
