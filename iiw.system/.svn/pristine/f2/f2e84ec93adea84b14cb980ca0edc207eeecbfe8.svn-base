<div class="iiw-system-page-container">
    <div class="stretch ui-layout-column" ui-layout="{ flow: 'column'}" options="{dividerSize:'0'}">
        <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
            <div class="ui-layout-container iiw-system-module-title-container" size="65px" ui-layout-container>
                <h2 class="page-title">{{title}}</h2>
            </div>
            <div class="ui-layout-container" ui-layout-container>
                <div class="iiw-system-oumapping-container layout-full" ui-view style="overflow: auto;">
                    <div class="ui-layout-row system-syuser-page-content" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
                        <div ui-layout-container size="47px" class="iiw-system-oumapping-container-header layout-full">
                            <div class="pull-left">
                                <button ng-click="oumapping.add()" type="button" class="btn btn-success"><i class="fa fa-plus fa-fw"></i>添加</button>
                                <button ng-click="oumapping.mod()" type="button" class="btn btn-warning"><i class="fa fa-edit fa-fw"></i>修改</button>
                                <button ng-click="oumapping.del()" type="button" class="btn btn-danger"><i class="fa fa-minus fa-fw"></i>删除</button>
                            </div>
                            <div class="mapping-filter pull-right">
                                <div class="col-lg-6">
                                    <div class="col-md-5" style="padding-right: 0;">
                                        <label class="control-label">类型：</label>
                                    </div>
                                    <div class="col-md-7" style="padding-left: 0;">
                                        <select ng-model="filter.type" ng-change="search()">
                                            <option value="">所有类型</option>
                                            <option value="police">干警</option>
                                            <option value="criminal">罪犯</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" ng-model="filter.text" ng-keypress="search($event)" />
                                </div>
                            </div>
                        </div>
                        <div ui-layout-container size="56px" style="overflow: hidden;">
                            <div class="layout-full" style="padding: 10px 10px 0px 10px">
                                <table class="table table-hover iiw-system-table-container">
                                    <colgroup><col width="8%"><col width="10%"><col width="20%"><col width="30%"><col width="30%"></colgroup>
                                    <thead>
                                    <tr>
                                        <th>
                                            <input type="checkbox" ng-model="oumapping.selectAll" ng-click="oumapping.selAll()" style="width:20px;height:20px;"/>
                                        </th>
                                        <th>#</th>
                                        <th>类型</th>
                                        <th>平台单位</th>
                                        <th>映射单位</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div ui-layout-container class="iiw-system-oumapping-container-body">
                            <div class="layout-full addScroll" id="myformtable" style="border:1px solid rgba(0,0,0,0.2);" ng-form="mytable">
                                <table class="table table-hover iiw-system-table-container">
                                    <colgroup><col width="8%"><col width="10%"><col width="20%"><col width="30%"><col width="30%"></colgroup>
                                    <tbody>
                                    <tr ng-repeat="item in oumappingList" ng-class="{'select':item.checked}" ng-click="oumapping.select(item, $event)">
                                        <td>
                                            <input class="text-center" type="checkbox" ng-model="item.checked" style="width:20px;height:20px;"/>
                                        </td>
                                        <td>{{$index + 1}}</td>
                                        <td>
                                            <div>{{item.type == 'police' ? '干警' : '罪犯'}}</div>
                                        </td>
                                        <td>
                                            <div>{{item.name}}</div>
                                        </td>
                                        <td>
                                            <div>{{item.oubm}}</div>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="pagination ui-layout-container pagination-layout-container" size="49px" ui-layout-container>
                            <label class="col-lg-3" style="height:50px; line-height: 50px;">统计信息：每页{{pages.pageSize}}行， 共{{pages.totalSize||0}}行， 共{{pages.totalPage||0}}页</label>
                            <uib-pagination style="padding: 5px;" boundary-links="true" first-text="&laquo;" last-text="&raquo;" class="pagination pull-right" total-items="pages.totalSize" ng-model="pages.pageNo" ng-change="pageChanged()" items-per-page="pages.pageSize" previous-text="上一页" next-text="下一页" max-size="5"></uib-pagination>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
