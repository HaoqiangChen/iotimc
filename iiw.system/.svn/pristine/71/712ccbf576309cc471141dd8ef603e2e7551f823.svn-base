<div class="iiw-system-page-container">
    <div class="stretch ui-layout-column" ui-layout="{ flow: 'column'}" options="{dividerSize:'0'}">
        <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
            <div class="ui-layout-container iiw-system-module-title-container" size="60px" ui-layout-container>
                <h2 class="page-title">{{title}}</h2>
            </div>
            <div class="ui-layout-container system-dataSafe-container" ui-layout-container>
                <div ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
                    <div class="system-dataSafe-header" size="50px" ui-layout-container>
                        <button class="btn btn-success" ng-click="dataSafe.backup()">数据备份</button>
                        <button class="btn btn-info" ng-click="dataSafe.recovery()">数据恢复</button>
                    </div>
                    <div class="system-dataSafe-main" ui-layout-container>
                        <div class="layout-full" style="border: 1px solid rgba(0, 0, 0, 0.2);">
                            <table class="table table-hover iiw-system-table-container">
                                <colgroup><col width="50px"/><col width="80px"/><col width="200px"/><col/></colgroup>
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            <input type="checkbox" ng-model="role.bSelectAll" style="width:20px;height:20px;" ng-click="role.selectAll()">
                                        </th>
                                        <th class="text-center">序号</th>
                                        <th class="text-center">模块名称</th>
                                        <th>内容</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-class="{'select':item.checked}" ng-repeat="item in dataSafe.list" ng-click="dataSafe.select(item)">
                                        <td class="text-center">
                                            <input type="checkbox" ng-model="item.checked" style="width:20px;height:20px;">
                                        </td>
                                        <td class="text-center">{{$index+1}}</td>
                                        <td class="text-center">{{item.module}}</td>
                                        <td>{{item.content}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="system-dataSafe-footer" size="60px" ui-layout-container>
                        <uib-pagination style="margin: 0;" class="pagination pull-right" direction-links="true" boundary-links="true" boundary-link-numbers="true" rotate="false" total-items="role.totalSize" ng-model="role.currentPage" ng-change="role.change()" items-per-page="role.pageSize" max-size="10" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></uib-pagination>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>