<div class="layout-full">
    <div class="ui-layout-row" ui-layout="{ flow: 'row'}" options="{dividerSize:'0'}">
        <div class="ui-layout-container iiw-system-form-container" ui-layout-container>
            <form class="form-horizontal label-left" id="entityItemForm" name="entityItemForm" novalidate>
                <fieldset>
                    <legend class="section">日常事务信息</legend>
                    <div class="control-group row">
                        <div class="col-md-2">
                            <label class="control-label">事务名称</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="text" ng-model="entityItem.title" placeholder="请输入事务名称" class="form-control" required/>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <lable ng-show="entityItem.title == null" style="color:red;">*事务名称不能为空</lable>
                        </div>
                    </div>
                    <div class="control-group row">
                        <div class="col-md-2">
                            <label class="control-label">开始时间</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="text" id="starttime" ng-model="entityItem.starttime" placeholder="请输入开始时间" class="form-control" required/>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <lable ng-show="entityItem.starttime == null" style="color:red;">*开始时间不能为空</lable>
                        </div>
                    </div>
                    <div class="control-group row">
                        <div class="col-md-2">
                            <label class="control-label">结束时间</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="text" id="endtime" ng-model="entityItem.endtime" placeholder="请输入结束时间" class="form-control" required/>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <lable ng-show="entityItem.endtime == null" style="color:red;">*结束时间不能为空</lable>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="ui-layout-container iiw-system-form-button-layout-container" size="60px" ui-layout-container>
            <button class="btn btn-success btn-s-md" ng-disabled="entityItemForm.$invalid" ng-click="save()">提交</button>
            <button class="btn btn-danger btn-s-md" ng-click="cancel()">取消</button>
        </div>
    </div>
</div>
